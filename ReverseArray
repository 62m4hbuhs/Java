import java.util.Arrays;

class Solution {
    public void reverseArray(int arr[]) {
        int left = 0;
        int right = arr.length - 1;

        while (left < right) {
            int temp = arr[left];
            arr[left] = arr[right];
            arr[right] = temp;

            left++;
            right--;
        }
    }
}

public class Main {
    public static void main(String[] args) {
        int[] arr = {1, 4, 3, 2, 6, 5};

        Solution obj = new Solution();   
        obj.reverseArray(arr);            

        System.out.println(Arrays.toString(arr));  
    }
}
